<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.app.ui.profit.ProfitController"
            stylesheets="@/styles/profit.css"
            styleClass="profit-root">

    <!-- ================= TOP: MEN칔 DE NAVEGACI칍N ================= -->
    <top>
        <HBox spacing="12"
              alignment="CENTER_LEFT"
              styleClass="profit-header">

            <Button fx:id="btnIndicators"
                    text="游늵 Indicadores Financieros"
                    onAction="#showIndicators"
                    styleClass="nav-button, nav-active"/>

            <Button fx:id="btnProduct"
                    text="游닍 Por Producto"
                    onAction="#showByProduct"
                    styleClass="nav-button"/>

            <Button fx:id="btnCategory"
