        </HBox>
    </top>

    <!-- ================= CENTER: CONTENIDO CON SCROLL ================= -->
    <center>
        <ScrollPane fitToWidth="true"
                    styleClass="profit-scroll">

            <BorderPane.margin>
                <Insets top="0" right="24" bottom="24" left="24"/>
            </BorderPane.margin>

            <content>
                <StackPane fx:id="contentStack">

                    <padding>
                        <Insets top="24"/>
                    </padding>

                    <!-- ========== CU-29: INDICADORES FINANCIEROS ========== -->
                    <VBox fx:id="indicatorsView"
                          spacing="0"
                          visible="false"
                          managed="false">
                        <!-- Contenido din치mico desde controller -->
                    </VBox>

                    <!-- ========== CU-30: RENTABILIDAD POR PRODUCTO ========== -->
                    <VBox fx:id="productView"
                          spacing="24"
                          visible="false"
                          managed="false">
                        <!-- Contenido din치mico desde controller -->
                    </VBox>

                    <!-- ========== CU-31: RENTABILIDAD POR CATEGOR칈A ========== -->
                    <VBox fx:id="categoryView"
                          spacing="24"
                          visible="false"
                          managed="false">
                        <!-- Contenido din치mico desde controller -->
                    </VBox>

                    <!-- ========== CU-32: PROYECCI칍N FUTURA ========== -->
                    <VBox fx:id="projectionView"
                          spacing="24"
                          visible="false"
                          managed="false">
                        <!-- Contenido din치mico desde controller -->
                    </VBox>

                </StackPane>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
