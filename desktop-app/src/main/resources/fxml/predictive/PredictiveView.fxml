<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.image.ImageView?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.app.ui.predictive.PredictiveController"
            stylesheets="@/styles/predictive.css"
            styleClass="predictive-root">

    <!-- ================= TOP: MONITOR DE FASES ================= -->
    <top>
        <HBox spacing="24"
              alignment="CENTER"
              styleClass="phase-monitor">

            <BorderPane.margin>
                <Insets top="20" right="20" left="20"/>
            </BorderPane.margin>

            <VBox alignment="CENTER" spacing="6">
                <StackPane fx:id="phase1" styleClass="phase-circle">
                    <Label text="1"/>
                </StackPane>
                <Label text="Seleccionar Modelo" styleClass="phase-label"/>
            </VBox>

            <Separator/>

            <VBox alignment="CENTER" spacing="6">
                <StackPane fx:id="phase2" styleClass="phase-circle">
                    <Label text="2"/>
                </StackPane>
                <Label text="Configurar ParÃ¡metros" styleClass="phase-label"/>
            </VBox>

            <Separator/>

            <VBox alignment="CENTER" spacing="6">
                <StackPane fx:id="phase3" styleClass="phase-circle">
                    <Label text="3"/>
                </StackPane>
                <Label text="Entrenar Modelo" styleClass="phase-label"/>
            </VBox>

            <Separator/>

            <VBox alignment="CENTER" spacing="6">
                <StackPane fx:id="phase4" styleClass="phase-circle">
                    <Label text="4"/>
                </StackPane>
                <Label text="Ver Resultados" styleClass="phase-label"/>
            </VBox>
        </HBox>
    </top>

    <!-- ================= CENTER: CONTENIDO SCROLLEABLE ================= -->
    <center>
        <ScrollPane fitToWidth="true"
                    styleClass="predictive-scroll">

            <BorderPane.margin>
                <Insets top="0" right="20" bottom="0" left="20"/>
            </BorderPane.margin>

            <content>
                <VBox spacing="24"
                      fx:id="mainContent">

                    <padding>
                        <Insets top="20" bottom="20"/>
                    </padding>

                    <!-- ================= FASE 1 ================= -->
                    <VBox fx:id="phase1Content" spacing="16">

                        <Label text="Seleccionar modelo predictivo"
                               styleClass="section-title"/>

                        <HBox spacing="10" alignment="TOP_LEFT">

                            <FlowPane fx:id="modelsContainer"
                                      hgap="16"
                                      vgap="16"
                                      prefWrapLength="620"
                                      HBox.hgrow="ALWAYS"
                                      styleClass="models-container"/>

                            <VBox fx:id="modelDetailPane"
                                  spacing="12"
                                  prefWidth="350"
                                  minWidth="350"
                                  maxWidth="350"
                                  styleClass="model-detail">

                                <Label fx:id="detailTitle"
                                       styleClass="detail-title"/>

                                <Label fx:id="detailDescription"
                                       wrapText="true"/>

                                <Separator/>

                                <Label fx:id="detailExtra"
                                       wrapText="true"
                                       styleClass="detail-extra"/>
                            </VBox>

                        </HBox>
                    </VBox>

                    <!-- ================= FASE 2 ================= -->
                    <VBox fx:id="phase2Content"
                          spacing="16"
                          visible="false"
                          managed="false">

                        <Label text="Configurar parÃ¡metros del modelo"
                               styleClass="section-title">
                            <VBox.margin>
                                <Insets bottom="16"/>
                            </VBox.margin>
                        </Label>

                        <HBox spacing="20" alignment="TOP_LEFT">

                            <!-- ========== PANEL PRINCIPAL - PARÃMETROS (IZQUIERDA) ========== -->
                            <VBox fx:id="parametersContainer"
                                  spacing="20"
                                  HBox.hgrow="ALWAYS"
                                  styleClass="parameters-container">


                            </VBox>

                            <!-- ========== PANEL LATERAL - RESUMEN Y VALIDACIÃ“N (DERECHA) ========== -->
                            <VBox spacing="16"
                                  prefWidth="300"
                                  minWidth="300"
                                  maxWidth="300"
                                  styleClass="phase2-sidebar">

                                <!-- Contenedor de cards de resumen -->
                                <VBox fx:id="parametersSummary"
                                      spacing="16">


                                </VBox>

                            </VBox>

                        </HBox>

                    </VBox>

                    <!-- ================= FASE 3 ================= -->
                    <VBox fx:id="phase3Content"
                          spacing="24"
                          alignment="CENTER"
                          visible="false"
                          managed="false">

                        <StackPane
                                   prefHeight="420"
                                   styleClass="training-card">

                            <StackPane.margin>
                                <Insets top="20" bottom="20"/>
                            </StackPane.margin>

                            <VBox spacing="18"
                                  alignment="CENTER">

                                <!-- ===== ICONO PRINCIPAL ===== -->
                                <StackPane fx:id="iconContainer"
                                           maxWidth="140"
                                           maxHeight="140"
                                           styleClass="icon-circle">

                                    <ImageView fx:id="trainingIcon"
                                               fitWidth="130"
                                               fitHeight="130"
                                               preserveRatio="true"/>
                                </StackPane>

                                <!-- ===== TEXTO ===== -->
                                <Label fx:id="trainingTitleTxt"
                                       text="Da clic en el botÃ³n de Entrenar para iniciar el proceso de entrenamiento del modelo."
                                       wrapText="true"
                                       maxWidth="420"
                                       styleClass="training-title"/>

                                <!-- ===== MÃ‰TRICAS ===== -->
                                <HBox fx:id="trainingMetrics"
                                      spacing="24"
                                      alignment="CENTER"
                                      visible="false"
                                      managed="false">

                                    <VBox alignment="CENTER">
                                        <ImageView fx:id="resultIcon" fitWidth="45" fitHeight="45"/>
                                        <Label fx:id="lblResult"/>
                                    </VBox>

                                    <Separator/>

                                    <VBox alignment="CENTER">
                                        <ImageView fx:id="timeIcon" fitWidth="45" fitHeight="45"/>
                                        <Label fx:id="lblTrainingTime"/>
                                    </VBox>

                                    <Separator/>

                                    <VBox alignment="CENTER">
                                        <ImageView fx:id="metricIcon" fitWidth="45" fitHeight="45"/>
                                        <Label fx:id="lblMetric"/>
                                    </VBox>

                                </HBox>

                                <Separator/>

                                <Label fx:id="trainingInfo"
                                       wrapText="true"
                                       maxWidth="460"
                                       styleClass="training-info"/>

                                <!-- ===== BOTÃ“N ===== -->
                                <Button fx:id="btnTrain"
                                        text="Entrenar modelo"
                                        onAction="#onTrainModel"
                                        styleClass="train-button"/>

                            </VBox>
                        </StackPane>
                    </VBox>


                    <!-- ================= FASE 4 - RESULTADOS ================= -->
                    <VBox fx:id="phase4Content"
                          visible="false"
                          managed="false">

                        <HBox spacing="0" VBox.vgrow="ALWAYS">

                            <!-- ========== PANEL PRINCIPAL (IZQUIERDA) ========== -->
                            <VBox spacing="20"
                                  HBox.hgrow="ALWAYS"
                                  styleClass="results-main-panel">

                                <padding>
                                    <Insets top="0" right="20" bottom="20" left="0"/>
                                </padding>

                                <!-- TÃ­tulo de secciÃ³n -->
                                <Label text="Resultados del AnÃ¡lisis"
                                       styleClass="results-section-title"/>

                                <!-- ========== KPI CARDS ROW ========== -->
                                <FlowPane fx:id="resultsKpiContainer"
                                          hgap="16"
                                          vgap="16"
                                          styleClass="results-kpi-row">
                                    <!-- Las KPI cards se cargan dinÃ¡micamente -->
                                </FlowPane>

                                <!-- ========== CHARTS CONTAINER ========== -->
                                <VBox fx:id="resultsChartsContainer"
                                      spacing="20"
                                      styleClass="results-charts-container">
                                    <!-- Los charts se cargan dinÃ¡micamente -->
                                </VBox>

                            </VBox>

                            <!-- ========== PANEL LATERAL (DERECHA) ========== -->
                            <VBox spacing="20"
                                  prefWidth="280"
                                  maxWidth="280"
                                  styleClass="results-sidebar">

                                <padding>
                                    <Insets  top="20" bottom="20"  left="20" right="20"/>
                                </padding>

                                <!-- ========== ACCIONES RÃPIDAS ========== -->
                                <VBox spacing="12"
                                      styleClass="sidebar-section">

                                    <Label text="Acciones RÃ¡pidas"
                                           styleClass="sidebar-section-title"/>

                                    <VBox spacing="8">
                                        <Button text="ðŸ’¾  Guardar PredicciÃ³n"
                                                maxWidth="Infinity"
                                                onAction="#onSavePrediction"
                                                styleClass="sidebar-action-btn, primary"/>

                                        <Button text="ðŸ“„  Generar Reporte"
                                                maxWidth="Infinity"
                                                onAction="#onGenerateReport"
                                                styleClass="sidebar-action-btn, secondary"/>

                                        <Button text="ðŸ”„  Reentrenar Modelo"
                                                maxWidth="Infinity"
                                                onAction="#onRetrainModel"
                                                styleClass="sidebar-action-btn, secondary"/>

                                        <Separator/>

                                        <Button text="ðŸ“Š  Exportar Datos"
                                                maxWidth="Infinity"
                                                onAction="#onExportData"
                                                styleClass="sidebar-action-btn, tertiary"/>
                                    </VBox>
                                </VBox>

                                <!-- ========== RESUMEN DEL ENTRENAMIENTO ========== -->
                                <VBox spacing="12"
                                      styleClass="sidebar-section">

                                    <Label text="Resumen del Entrenamiento"
                                           styleClass="sidebar-section-title"/>

                                    <VBox fx:id="trainingSummaryContainer"
                                          spacing="8"
                                          styleClass="summary-items-container">
                                        <!-- Los items se cargan dinÃ¡micamente -->
                                    </VBox>
                                </VBox>

                                <!-- ========== INFORMACIÃ“N DEL MODELO ========== -->
                                <VBox spacing="12"
                                      styleClass="sidebar-section">

                                    <Label text="InformaciÃ³n del Modelo"
                                           styleClass="sidebar-section-title"/>

                                    <VBox fx:id="modelInfoContainer"
                                          spacing="8"
                                          styleClass="summary-items-container">
                                        <!-- Los items se cargan dinÃ¡micamente -->
                                    </VBox>
                                </VBox>

                            </VBox>

                        </HBox>

                    </VBox>



                </VBox>

            </content>
        </ScrollPane>
    </center>

    <!-- ================= FOOTER ================= -->
    <bottom>
        <HBox fx:id="predictiveFooter"
              spacing="12"
              alignment="CENTER"
              styleClass="predictive-footer">

            <BorderPane.margin>
                <Insets right="20" bottom="16" left="20"/>
            </BorderPane.margin>

            <Button text="â† Anterior"
                    fx:id="btnPrevious"
                    onAction="#onPreviousPhase"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Siguiente â†’"
                    fx:id="btnNext"
                    onAction="#onNextPhase"/>
        </HBox>
    </bottom>

</BorderPane>
