<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.app.ui.components.charts.PieChartCardController"
      fx:id="cardContainer"
      styleClass="chart-card"
      stylesheets="@/styles/charts.css"
      spacing="12">

    <!-- Header de la Card -->
    <VBox spacing="4" styleClass="chart-header">
        <Label fx:id="chartTitle"
               text="Título del Gráfico"
               styleClass="chart-title"/>
        
        <Label fx:id="chartSubtitle"
               text="Subtítulo opcional"
               styleClass="chart-subtitle"/>
    </VBox>

    <!-- Contenido del Gráfico -->
    <VBox fx:id="chartContent"
          alignment="CENTER"
          VBox.vgrow="ALWAYS">
        
        <PieChart fx:id="pieChart"
                  animated="true"
                  legendVisible="true"
                  labelsVisible="true"
                  startAngle="90"
                  VBox.vgrow="ALWAYS"/>
        
    </VBox>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

</VBox>
