<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<!--
  main-view.fxml
  Simple UI with a label and a button. The controller changes the label text when the button is clicked.
-->
<VBox xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.javafxapp.MainController"
      alignment="CENTER" spacing="10">
    <padding>
        <Insets topRightBottomLeft="20" />
    </padding>

    <Label fx:id="messageLabel" text="Welcome to your JavaFX Starter!" />
    <Button fx:id="changeTextButton" text="Change Label Text" onAction="#onChangeTextButtonClick" />
</VBox>
