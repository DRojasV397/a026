<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.a026</groupId>
  <artifactId>TTA026</artifactId>
  <version>1.0-SNAPSHOT</version>
  <name>TTA026 JavaFX App</name>
  <url>http://maven.apache.org</url>

  <properties>
    <!-- Use JDK 17 or higher -->
    <maven.compiler.release>17</maven.compiler.release>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

    <!-- JavaFX version (LTS). You may update to newer versions if needed. -->
    <javafx.version>21.0.5</javafx.version>
    <!-- Platform classifier is set by profiles below: win, mac, linux -->
    <javafx.platform>${os.detected.javafx.platform}</javafx.platform>

    <!-- JVM args to pass to javafx:run (supported via property by plugin 0.0.8) -->
    <javafx.run.jvmArgs>--add-opens=java.base/java.lang.reflect=ALL-UNNAMED --add-opens=javafx.controls/javafx.scene.control=ALL-UNNAMED --add-opens=javafx.controls/javafx.scene.control.skin=ALL-UNNAMED --add-exports=javafx.controls/com.sun.javafx.scene.control=ALL-UNNAMED --add-exports=javafx.controls/com.sun.javafx.scene.control.behavior=ALL-UNNAMED --add-exports=javafx.controls/com.sun.javafx.scene.control.inputmap=ALL-UNNAMED --add-exports=javafx.graphics/com.sun.javafx.stage=ALL-UNNAMED</javafx.run.jvmArgs>
  </properties>

  <dependencies>
    <!-- JavaFX Modules used by this project -->
    <dependency>
      <groupId>org.openjfx</groupId>
      <artifactId>javafx-controls</artifactId>
      <version>${javafx.version}</version>
      <classifier>${javafx.platform}</classifier>
    </dependency>
    <dependency>
      <groupId>org.openjfx</groupId>
      <artifactId>javafx-fxml</artifactId>
      <version>${javafx.version}</version>
      <classifier>${javafx.platform}</classifier>
    </dependency>

    <!-- BootstrapFX for modern base styling (replaces JFoenix) -->
    <dependency>
      <groupId>org.kordamp.bootstrapfx</groupId>
      <artifactId>bootstrapfx-core</artifactId>
      <version>0.4.0</version>
    </dependency>

    <!-- ReactFX for reactive streams/bindings -->
    <dependency>
      <groupId>org.reactfx</groupId>
      <artifactId>reactfx</artifactId>
      <version>2.0-M5</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- Ensure compilation with Java 17 -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <release>${maven.compiler.release}</release>
        </configuration>
      </plugin>

      <!-- JavaFX Maven plugin to run the app with: mvn -Pwindows javafx:run -->
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.8</version>
        <configuration>
          <mainClass>com.example.javafxapp.Main</mainClass>
        </configuration>
      </plugin>

      <!-- Alternative runner with explicit JVM flags for JFoenix on JDK17+ -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.3.0</version>
        <executions>
          <execution>
            <id>run-app</id>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>${java.home}\\bin\\java</executable>
              <classpathScope>runtime</classpathScope>
              <arguments>
                <argument>--add-opens=java.base/java.lang.reflect=ALL-UNNAMED</argument>
                <argument>--add-opens=javafx.controls/javafx.scene.control=ALL-UNNAMED</argument>
                <argument>--add-opens=javafx.controls/javafx.scene.control.skin=ALL-UNNAMED</argument>
                <argument>--add-exports=javafx.controls/com.sun.javafx.scene.control=ALL-UNNAMED</argument>
                <argument>--add-exports=javafx.controls/com.sun.javafx.scene.control.behavior=ALL-UNNAMED</argument>
                <argument>--add-exports=javafx.controls/com.sun.javafx.scene.control.inputmap=ALL-UNNAMED</argument>
                <argument>--add-exports=javafx.graphics/com.sun.javafx.stage=ALL-UNNAMED</argument>
                <argument>-cp</argument>
                <classpath/>
                <argument>com.example.javafxapp.Main</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <!-- OS profiles to set the correct JavaFX platform classifier -->
  <profiles>
    <profile>
      <id>windows</id>
      <activation>
        <os>
          <family>Windows</family>
        </os>
      </activation>
      <properties>
        <os.detected.javafx.platform>win</os.detected.javafx.platform>
      </properties>
    </profile>
    <profile>
      <id>linux</id>
      <activation>
        <os>
          <family>unix</family>
        </os>
      </activation>
      <properties>
        <os.detected.javafx.platform>linux</os.detected.javafx.platform>
      </properties>
    </profile>
    <profile>
      <id>mac</id>
      <activation>
        <os>
          <family>mac</family>
        </os>
      </activation>
      <properties>
        <os.detected.javafx.platform>mac</os.detected.javafx.platform>
      </properties>
    </profile>
    <!-- Optional profile for Apple Silicon. Activate with -Pmac-aarch64 if needed. -->
    <profile>
      <id>mac-aarch64</id>
      <properties>
        <os.detected.javafx.platform>mac-aarch64</os.detected.javafx.platform>
      </properties>
    </profile>
  </profiles>
</project>
